<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trending"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="20dp">

    <ImageView
        android:id="@+id/trending_episode_image"
        android:layout_width="128dp"
        android:layout_height="79dp"
        android:scaleType="centerCrop"
        android:src="@drawable/thumb_placeholder"
        android:gravity="center"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/trending_episode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trending_episode_image"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        style="@style/Header2"
        android:gravity="center"/>

    <TextView
        android:id="@+id/trending_episode_show_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trending_episode_title"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        style="@style/Header2"
        android:gravity="center"/>

</RelativeLayout>