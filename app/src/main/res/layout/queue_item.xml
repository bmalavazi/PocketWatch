<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/queue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/queue_image"
        android:layout_width="60dp"
        android:layout_height="42dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/thumb_placeholder"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/queue_subscribe"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_marginRight="20dp"
        android:src="@drawable/thumb_placeholder"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

    <RelativeLayout
        android:id="@+id/queue_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:layout_toEndOf="@id/queue_image"
        android:layout_toRightOf="@id/queue_image"
        android:layout_toLeftOf="@id/queue_subscribe">

        <TextView
            android:id="@+id/queue_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:layout_alignParentLeft="true"
            style="@style/Header1"/>

        <TextView
            android:id="@+id/queue_date_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/queue_title"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:layout_alignParentLeft="true"
            style="@style/Header3"/>

    </RelativeLayout>



</RelativeLayout>