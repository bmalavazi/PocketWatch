<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/carousel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/carousel_test"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/featured_shows_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FEATURED SHOWS"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="5dp"/>

        <com.pocketwatch.demo.ui.HorizontalListView
            android:id="@+id/featured_shows"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/trending_episodes_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRENDING EPISODES"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="5dp"/>

        <com.pocketwatch.demo.ui.HorizontalListView
            android:id="@+id/trending_episodes"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/recommend_episodes_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/featured_shows"
            android:text="RECOMMENDED FOR YOU"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="5dp"/>

        <com.pocketwatch.demo.ui.HorizontalListView
            android:id="@+id/recommended_episodes"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

    </LinearLayout>

</ScrollView>
